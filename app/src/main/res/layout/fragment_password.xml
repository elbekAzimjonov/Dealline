<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#424242"
    tools:context=".Fragments.PasswordFragment">

    <ImageView
        android:id="@+id/brendLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="198dp"
        android:src="@drawable/ic_dealline_yellow" />

    <LinearLayout
        android:id="@+id/indecator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/brendLogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/oneIndecator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:background="@drawable/spinner_background"
            android:scaleType="center" />

        <ImageView
            android:id="@+id/twoIndecator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:background="@drawable/spinner_background"
            android:scaleType="center" />

        <ImageView
            android:id="@+id/treeIndecator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:background="@drawable/spinner_background"
            android:scaleType="center" />

        <ImageView
            android:id="@+id/fourIndecator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:background="@drawable/spinner_background"
            android:scaleType="center" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="245dp"
        android:layout_height="251dp"
        android:layout_below="@id/indecator"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/numberOne"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/one"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="#FFD04A"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/two"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="2"
                    android:textColor="#FFD04A"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/tree"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="#FFD04A"
                    android:textSize="30sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/numberTwo"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/four"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="4"
                    android:textColor="#FFD04A"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/five"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="5"
                    android:textColor="#FFD04A"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/six"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="6"
                    android:textColor="#FFD04A"
                    android:textSize="30sp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/numberTree"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/seven"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="7"
                    android:textColor="#FFD04A"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/eit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="8"
                    android:textColor="#FFD04A"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/nine"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="9"
                    android:textColor="#FFD04A"
                    android:textSize="30sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/numberFour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/changePassword"
                    android:layout_width="0dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/zero"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="#FFD04A"
                    android:textSize="30sp" />

                <ImageView
                    android:id="@+id/deleteNumber"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:src="@drawable/ic_delete"
                    android:textColor="#FFD04A"
                    android:textSize="30sp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/center"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/horizontal_item"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <View
            android:id="@+id/bottom"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/horizontal_item"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/center"
            app:layout_constraintVertical_bias="0.55"
            tools:ignore="MissingConstraints" />

        <View
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/horizontal_item"
            app:layout_constraintBottom_toTopOf="@+id/center"
            app:layout_constraintTop_toTopOf="@+id/linearLayout"
            tools:ignore="MissingConstraints" />

        <View
            android:id="@+id/left"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@drawable/ic_vertical"
            app:layout_constraintEnd_toStartOf="@+id/noView"
            app:layout_constraintHorizontal_bias="0.67"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints" />

        <View
            android:id="@+id/right"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@drawable/ic_vertical"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout"
            app:layout_constraintHorizontal_bias="0.36"
            app:layout_constraintStart_toEndOf="@+id/noView"
            tools:ignore="MissingConstraints" />

        <View
            android:id="@+id/noView"
            android:layout_width="2dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>