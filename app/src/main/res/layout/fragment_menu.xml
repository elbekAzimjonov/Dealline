<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.MenuFragment">

    <ImageView
        android:id="@+id/dealline_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/topRectangle"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="47dp"
        android:src="@drawable/dealline" />

    <LinearLayout
        android:id="@+id/topRectangle"
        android:layout_width="255dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/otchot"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="60dp"
        android:layout_marginBottom="18dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/zakazat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@drawable/custom_settings"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/buy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_buy" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Заказать"
                android:textColor="#2D2C2D"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/oplat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:background="@drawable/custom_settings"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_ploteje" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Платить"
                android:textColor="#2D2C2D"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/otchot"
        android:layout_width="255dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="60dp"
        android:background="@drawable/icon_reports">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ic_otchot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_graph" />

            <TextView
                android:id="@+id/textOtchot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ic_otchot"
                android:layout_marginTop="8dp"
                android:text="Отчёты"
                android:textColor="#2D2C2D"
                android:textSize="12sp" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/middle_rectangle"
        android:layout_width="255dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/otchot"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="60dp"
        android:layout_marginTop="18dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="2dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:background="@drawable/custom_order">

                <TextView
                    android:id="@+id/textZakas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="8dp"
                    android:layout_toRightOf="@+id/icon_zakas"
                    android:text="Заказы"
                    android:textColor="#2D2C2D"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/icon_zakas"
                    android:layout_width="20dp"
                    android:layout_height="14dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="9dp"
                    android:src="@drawable/icon_zakaz" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_message_background"
                    android:gravity="center"
                    android:text="2"
                    android:textColor="#FFD04A"
                    android:textSize="7sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/custom_order_buttom">

                <ImageView
                    android:id="@+id/icon_plotej"
                    android:layout_width="20dp"
                    android:layout_height="14dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="9dp"
                    android:src="@drawable/ic_ploteje" />

                <TextView
                    android:id="@+id/textPlotej"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="8dp"
                    android:layout_toEndOf="@+id/icon_plotej"
                    android:text="Платежи"
                    android:textColor="#2D2C2D"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_message_background"
                    android:gravity="center"
                    android:text="7"
                    android:textColor="#FFD04A"
                    android:textSize="7sp" />

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/send"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_weight="1"
            android:background="@drawable/ic_otpravit"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_share" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Отправить"
                android:textColor="#2D2C2D" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="255dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/middle_rectangle"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="60dp"
        android:layout_marginTop="18dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@drawable/custom_settings"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/settings_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/settings" />

            <TextView
                android:id="@+id/settings_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/settings_icon"
                android:text="Настройка"
                android:textColor="#2D2C2D"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:background="@drawable/custom_settings"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/refresh_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_refresh" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Обновить"
                android:textColor="#2D2C2D"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
